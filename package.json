{
    "description": "My personal site",
    "dependencies": {
        "@fortawesome/fontawesome-free": "5.15.2",
        "tailwindcss": "2.0.2"
    },
    "devDependencies": {
        "@11ty/eleventy": "0.11.1",
        "@11ty/eleventy-img": "0.7.4",
        "autoprefixer": "10.2.1",
        "gh-pages": "3.1.0",
        "npm-run-all": "4.1.5",
        "postcss": "8.2.4",
        "postcss-cli": "8.3.1"
    },
    "scripts": {
        "build": "npm-run-all build:*",
        "build:css": "postcss src/main.css -o dist/main.css",
        "build:template": "eleventy",
        "deploy": "NODE_ENV=production npm run build && echo maximedupre.com > dist/CNAME && gh-pages -d dist",
        "start": "npm-run-all -p start:*",
        "start:css": "npm run build:css -- --watch --verbose",
        "start:template": "npm run build:template -- --serve"
    }
}
